<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="GeometryTriangleIcon" TargetType="ContentControl">
        <Polygon HorizontalAlignment="Center" StrokeThickness="1" Stroke="{ThemeResource SystemControlBackgroundAltHighBrush}" >
            <Shape.Fill>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="DodgerBlue" Offset="0.4"/>
                    <GradientStop Color="DeepSkyBlue" Offset="0.6"/>
                </LinearGradientBrush>
            </Shape.Fill>
            <Polygon.Points>
                10,0 0,20 20,20
            </Polygon.Points>
        </Polygon>
    </ControlTemplate>

</ResourceDictionary>