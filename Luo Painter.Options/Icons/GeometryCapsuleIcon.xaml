<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="GeometryCapsuleIcon" TargetType="ContentControl">
        <Rectangle RadiusX="6" RadiusY="6" Width="26" Height="12" StrokeThickness="1" Stroke="{ThemeResource SystemControlBackgroundAltHighBrush}" >
            <Shape.Fill>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="DodgerBlue" Offset="0.4"/>
                    <GradientStop Color="DeepSkyBlue" Offset="0.6"/>
                </LinearGradientBrush>
            </Shape.Fill>
        </Rectangle>
    </ControlTemplate>

</ResourceDictionary>