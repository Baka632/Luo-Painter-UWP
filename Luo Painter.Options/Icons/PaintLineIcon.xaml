<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="PaintLineIcon" TargetType="ContentControl">
        <Polygon HorizontalAlignment="Center" StrokeThickness="1" Stroke="{ThemeResource SystemControlBackgroundAltHighBrush}" >
            <Shape.Fill>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="DeepPink" Offset="0.1"/>
                    <GradientStop Color="DeepSkyBlue" Offset="1"/>
                </LinearGradientBrush>
            </Shape.Fill>
            <Polygon.Points>
                20,3 3,20 0,17 17,0
            </Polygon.Points>
        </Polygon>
    </ControlTemplate>

</ResourceDictionary>