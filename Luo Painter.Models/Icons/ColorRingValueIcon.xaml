<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="ColorRingValueIcon" TargetType="ContentControl">
        <Ellipse Width="20" Height="20" StrokeThickness="1" Stroke="{ThemeResource AppForeground}">
            <Shape.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="#00D1FE"/>
                    <GradientStop Offset="1" Color="#88000000"/>
                </LinearGradientBrush>
            </Shape.Fill>
        </Ellipse>
    </ControlTemplate>

</ResourceDictionary>