<Page
    x:Class="Luo_Painter.DrawPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Windows10version1903="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 8)"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:transformers="using:FanKit.Transformers"
    xmlns:local="using:Luo_Painter"
    xmlns:brushes="using:Luo_Painter.Brushes"
    xmlns:controls="using:Luo_Painter.Controls"
    xmlns:elements="using:Luo_Painter.Elements"
    xmlns:hsvColorPickers="using:Luo_Painter.HSVColorPickers"
    xmlns:options="using:Luo_Painter.Options"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    NavigationCacheMode="Required"
    mc:Ignorable="d" 
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >


    <FrameworkElement.Resources>
        <!--Transformer-->
        <brushes:InkCanvasOperator x:Name="Operator" DestinationControl="{x:Bind CanvasControl}"/>
        <transformers:CanvasTransformer x:Name="Transformer" />
        <!--Extension-->
        <local:ApplicationBrushesExtension x:Name="ApplicationBrushes"/>
        <!--Storyboard-->
        <!--Radian-->
        <Storyboard x:Name="RadianStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Value" Storyboard.TargetName="RadianSlider" EnableDependentAnimation="True">
                <SplineDoubleKeyFrame Value="0" KeyTime="0:0:0.2" KeySpline="0.5,1.0 1,1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <!--Scale-->
        <Storyboard x:Name="ScaleStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Value" Storyboard.TargetName="ScaleSlider" EnableDependentAnimation="True">
                <SplineDoubleKeyFrame Value="23" KeyTime="0:0:0.2" KeySpline="0.5,1.0 1,1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <!--Flyout-->
        <Flyout x:Name="ColorFlyout" Placement="Top" Windows10version1903:ShouldConstrainToRootBounds="False" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <controls:ColorPicker2 x:Name="ColorPicker" />
        </Flyout>
        <Flyout x:Name="NumberFlyout" Placement="Top" Windows10version1903:ShouldConstrainToRootBounds="False" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <hsvColorPickers:NumberPicker x:Name="NumberPicker" />
        </Flyout>
    </FrameworkElement.Resources>


    <Grid Background="{ThemeResource AppBackgroundDark}">

        <!--VisualState-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!--Normal-->
                <VisualState x:Name="AppBarNormal"/>
                <!--Preview-->
                <VisualState x:Name="AppBarPreview">
                    <VisualState.Setters>
                        <Setter Target="HeadGrid.Visibility" Value="Collapsed"/>
                        <Setter Target="AppBarHeadGrid.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <!--Overlay-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--Dock-->
                        <Setter Target="DockLeftButton.Visibility" Value="Collapsed"/>
                        <Setter Target="DockRightButton.Visibility" Value="Collapsed"/>

                        <!--Split-->
                        <Setter Target="SplitLeftButton.Visibility" Value="Visible"/>
                        <Setter Target="SplitRightButton.Visibility" Value="Visible"/>

                        <Setter Target="SplitRightView.DisplayMode" Value="Overlay"/>
                        <Setter Target="SplitLeftView.DisplayMode" Value="Overlay"/>
                    </VisualState.Setters>
                </VisualState>
                <!--Inline-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1080"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <!--UnFullScreen-->
                <VisualState x:Name="UnFullScreen"/>
                <!--FullScreen-->
                <VisualState x:Name="FullScreen">
                    <VisualState.Setters>
                        <!--Head-->
                        <Setter Target="FullScreenButton.Visibility" Value="Collapsed"/>
                        <Setter Target="UnFullScreenButton.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <!--Phone-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--Head-->
                        <Setter Target="FullScreenButton.Visibility" Value="Collapsed"/>
                        <Setter Target="RedoButton.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <!--Pad-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>

                <!--Phone-->
                <VisualState x:Name="Phone">
                    <!--
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    -->
                    <VisualState.Setters>
                        <!--AppBar-->
                        <Setter Target="PaintScrollViewer.Margin" Value="0,0,0,49"/>
                        <Setter Target="PaintScrollViewer.Padding" Value="10,0"/>
                        <Setter Target="PaintScrollViewer.CornerRadius" Value="0"/>
                        <!--AppBar-->
                        <Setter Target="AppBarBorder.CornerRadius" Value="0"/>
                        <Setter Target="AppBarBorder.Margin" Value="0"/>
                        <Setter Target="AppBarBorder.HorizontalAlignment" Value="Stretch"/>
                        <Setter Target="AppBarBorder.BorderThickness" Value="0,1,0,0"/>
                        <Setter Target="AppBarGrid.Margin" Value="0"/>
                        <Setter Target="AppBarGrid.HorizontalAlignment" Value="Stretch"/>
                        <Setter Target="SwitchPresenter.Margin" Value="0"/>
                    </VisualState.Setters>
                </VisualState>

                <!--Pad-->
                <VisualState x:Name="Pad">
                    <!--
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                    -->
                    <VisualState.Setters>
                        <!--AppBar-->
                        <Setter Target="PaintScrollViewer.Margin" Value="0,10,0,60"/>
                        <!--AppBar-->
                        <Setter Target="AppBarBorder.CornerRadius" Value="8,8,0,0"/>
                        <Setter Target="AppBarBorder.Margin" Value="0"/>
                        <Setter Target="AppBarBorder.BorderThickness" Value="1,1,1,0"/>
                        <Setter Target="AppBarGrid.Margin" Value="0"/>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="PC">
                    <!--
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="900"/>
                    </VisualState.StateTriggers>
                    -->
                </VisualState>

                <!--Hub-->
                <VisualState x:Name="Hub">
                    <!--
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200"/>
                    </VisualState.StateTriggers>
                    -->
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>


        <!--Extension-->
        <elements:ApplicationTitleBarExtension x:Name="ApplicationView" TitleBarColor="{ThemeResource AppBackgroundColorDark}" AccentTitleBarColor="{ThemeResource AppBackgroundColorDark}"/>


        <!--Body-->
        <SplitView 
            x:Name="SplitRightView"
            Margin="0,50,0,0"
            PanePlacement="Right"
            OpenPaneLength="281"
            DisplayMode="Inline"
            PaneBackground="{ThemeResource SystemControlAcrylicWindowBrush}"
            >
            <SplitView.Pane>
                <Grid Padding="8,8,8,0" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource AppStroke}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <elements:IndexGrid Index="{x:Bind MenuListBox.SelectedIndex, Mode=OneWay}">
                        <controls:ToolListView x:Name="ToolListView" Visibility="Visible"/>
                        <controls:BrushGridView x:Name="BrushGridView" Visibility="Collapsed"/>
                        <controls:SizeListView x:Name="SizeListView" Visibility="Collapsed"/>
                        <controls:HistoryListView x:Name="HistoryListView" ItemsSource="{x:Bind History.Source}" Visibility="Collapsed"/>
                    </elements:IndexGrid>
                    <ListBox
                        x:Name="MenuListBox"
                        Grid.Row="1"
                        SelectedIndex="1"
                        >
                        <ListBoxItem local:Res.OIWTT="ToolMenu"/>
                        <ListBoxItem local:Res.OIWTT="BrushMenu"/>
                        <ListBoxItem local:Res.OIWTT="SizeMenu"/>
                        <ListBoxItem local:Res.OIWTT="HistoryMenu"/>
                    </ListBox>
                </Grid>
            </SplitView.Pane>
            <SplitView 
                x:Name="SplitLeftView"
                PanePlacement="Left" 
                OpenPaneLength="281" 
                DisplayMode="Inline" 
                PaneBackground="{ThemeResource SystemControlAcrylicWindowBrush}" 
                >
                <SplitView.Pane>
                    <Grid BorderThickness="1,0,0,0" BorderBrush="{ThemeResource AppStroke}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <controls:LayerListView 
                            x:Name="LayerListView"
                            Command="{x:Bind Command}" 
                            ItemsSource="{x:Bind ObservableCollection}"
                            />
                        <SplitButton
                            Grid.Row="1" 
                            Margin="7,0" 
                            Height="40" 
                            CornerRadius="4" 
                            BorderThickness="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            local:Res.OTT="LayerNewMenu"
                            CommandParameter="{x:Bind AddItem.CommandParameter,Mode=OneWay}"
                            Command="{x:Bind Command}" 
                            >
                            <SplitButton.Flyout>
                                <MenuFlyout Placement="TopEdgeAlignedRight">
                                    <!--New-->
                                    <MenuFlyoutSeparator Style="{StaticResource AppHeaderMenuFlyoutSeparator}"
                                             local:Res.OAK="LayerNewMenu"/>
                                    <MenuFlyoutItem x:Name="AddItem" local:Cmd.MFIWI="AddBitmapLayer" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                        <UIElement.KeyboardAccelerators>
                                            <KeyboardAccelerator Key="Insert"/>
                                        </UIElement.KeyboardAccelerators>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem local:Cmd.MFIWI="AddImageLayer" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="AddCurveLayer" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="AddFillLayer" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                </MenuFlyout>
                            </SplitButton.Flyout>
                            <SymbolIcon Margin="10,0,0,0" Symbol="Add"/>
                        </SplitButton>
                    </Grid>
                </SplitView.Pane>
                <Grid x:Name="ContentGrid">

                    <Canvas x:Name="Canvas" FlowDirection="LeftToRight" Background="Transparent" >
                        <!--AlignmentGrid-->
                        <elements:AlignmentGridWithSpot x:Name="AlignmentGrid" IsHitTestVisible="False" />

                        <!--Canvas-->
                        <canvas:CanvasVirtualControl x:Name="CanvasVirtualControl" IsHitTestVisible="False" UseSharedDevice="True" CustomDevice="{x:Bind CanvasDevice}" />
                        <canvas:CanvasAnimatedControl x:Name="CanvasAnimatedControl" IsHitTestVisible="False" TargetElapsedTime="0:0:0.05" UseSharedDevice="True" CustomDevice="{x:Bind CanvasDevice}" />
                        <canvas:CanvasControl x:Name="CanvasControl" UseSharedDevice="True" CustomDevice="{x:Bind CanvasDevice}" />

                        <!--Simulate-->
                        <controls:SimulateCanvas x:Name="SimulateCanvas" />

                        <!--Straw-->
                        <hsvColorPickers:Strawer x:Name="StrawViewer">
                            <Path StrokeThickness="1" Stroke="Black" Fill="White">
                                <Path.Data>
                                    M38.61,99.44l22.22,22.31l22.219,-22.31l35.627,-0c1.646,-0 2.983,-1.337 2.983,-2.983l0,-93.474c0,-1.646 -1.337,-2.983 -2.983,-2.983l-115.693,0c-1.646,0 -2.983,1.337 -2.983,2.983l-0,93.474c-0,1.646 1.337,2.983 2.983,2.983l35.627,-0Z
                                </Path.Data>
                            </Path>
                            <Border Canvas.Left="5" Canvas.Top="4" Width="112" Height="90" Background="{ThemeResource AppBackgroundDark}">
                                <canvas:CanvasControl x:Name="StrawCanvasControl" Width="112" Height="90" UseSharedDevice="True" CustomDevice="{x:Bind CanvasDevice}" />
                            </Border>
                            <FontIcon Canvas.Left="44" Canvas.Top="22" FontSize="40" Glyph="&#x2BD0;" Foreground="White" FontFamily="Segoe UI Symbol" />
                        </hsvColorPickers:Strawer>

                    </Canvas>

                    <!--Split-->
                    <Button x:Name="SplitLeftButton" Visibility="Collapsed" Width="24" Height="110" CornerRadius="0,6,6,0" HorizontalAlignment="Left" BorderThickness="0,1,1,1" BorderBrush="{ThemeResource AppStroke}" Background="{ThemeResource AppBackground}" >
                        <Line X1="0" X2="0" Y1="0" Y2="36" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeThickness="3" Stroke="{ThemeResource AppForeground}"/>
                    </Button>
                    <Button x:Name="SplitRightButton" Visibility="Collapsed" Width="24" Height="110" CornerRadius="6,0,0,6" HorizontalAlignment="Right" BorderThickness="1,1,0,1" BorderBrush="{ThemeResource AppStroke}" Background="{ThemeResource AppBackground}" >
                        <Line X1="0" X2="0" Y1="0" Y2="36" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeThickness="3" Stroke="{ThemeResource AppForeground}"/>
                    </Button>

                    <!--AppBar-->
                    <controls:PaintScrollViewer
                        x:Name="PaintScrollViewer" 
                        Visibility="Collapsed"
                        Padding="10" 
                        Margin="0,10,0,80"
                        CornerRadius="8" 
                        Width="{x:Bind ReverseDevicePhoneToWidth740Converter(Device), Mode=OneWay}"
                        >
                        <canvas:CanvasControl               
                            x:Name="InkCanvasControl"       
                            HorizontalAlignment="Center"
                            Width="240"                           
                            Height="120"                            
                            UseSharedDevice="True"                               
                            CustomDevice="{x:Bind CanvasDevice}"                       
                            />
                    </controls:PaintScrollViewer>

                    <!--AppBar-->
                    <Grid
                        x:Name="AppBarGrid"
                        Margin="22" 
                        MinWidth="426" 
                        MinHeight="50" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        >

                        <Border 
                            x:Name="AppBarBorder"
                            CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="{ThemeResource AppStroke}" 
                            Background="{ThemeResource AppAcrylicElementBrush}" 
                            />

                        <!--SwitchPresenter-->
                        <local:OptionSwitchPresenter x:Name="SwitchPresenter" Margin="12,0" MinHeight="50" >


                            <local:OptionCase Value="CropCanvas">
                                <hsvColorPickers:NumberSlider x:Name="CropCanvasSlider" Margin="0,5" Value="0" Minimum="-180" Maximum="180" Unit="º" TickFrequency="12" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="CropCanvas_Radians">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="Gray" Offset="0"/>
                                            <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="0.5"/>
                                            <GradientStop Color="Gray" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>


                            <local:OptionCase Value="Feather">
                                <hsvColorPickers:NumberSlider x:Name="FeatherSlider" Margin="0,5" Value="12" Minimum="1" Maximum="200" Decrease="True" TickFrequency="49" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="Feather"/>
                            </local:OptionCase>
                            <local:OptionCase Value="Grow">
                                <hsvColorPickers:NumberSlider x:Name="GrowSlider" Margin="0,5" Value="1" Minimum="1" Maximum="90" Decrease="True" TickFrequency="44" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="Grow"/>
                            </local:OptionCase>
                            <local:OptionCase Value="Shrink">
                                <hsvColorPickers:NumberSlider x:Name="ShrinkSlider" Margin="0,5" Value="1" Minimum="1" Maximum="90" Decrease="True" TickFrequency="44" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="Shrink"/>
                            </local:OptionCase>


                            <local:OptionCase Value="Move">
                                <controls:MovePicker x:Name="MovePicker"/>
                            </local:OptionCase>
                            <local:OptionCase Value="Transform">
                                <StackPanel>
                                    <Grid ColumnSpacing="2" Height="50" MinWidth="280" MaxWidth="360">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <ToggleButton x:Name="TransformSnapButton" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            <StackPanel Spacing="12" Orientation="Horizontal">
                                                <FontIcon Glyph="&#xE2AC;" FontFamily="Segoe MDL2 Assets"/>
                                                <TextBlock VerticalAlignment="Center"
                                                           local:Res.UT="Transform_Snap"/>
                                            </StackPanel>
                                        </ToggleButton>
                                        <ToggleButton x:Name="TransformRatioButton" Grid.Column="1" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            <StackPanel Spacing="12" Orientation="Horizontal">
                                                <FontIcon Glyph="&#xEA5F;" FontFamily="Segoe MDL2 Assets"/>
                                                <TextBlock VerticalAlignment="Center"
                                                           local:Res.UT="Transform_Ratio"/>
                                            </StackPanel>
                                        </ToggleButton>
                                        <ToggleButton x:Name="TransformCenterButton" Grid.Column="2" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            <StackPanel Spacing="12" Orientation="Horizontal">
                                                <FontIcon Glyph="&#xE958;" FontFamily="Segoe MDL2 Assets"/>
                                                <TextBlock VerticalAlignment="Center"
                                                           local:Res.UT="Transform_Center"/>
                                            </StackPanel>
                                        </ToggleButton>
                                    </Grid>
                                    <Grid ColumnSpacing="4" MinWidth="480" Height="60" Margin="10,4" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="4*" MinWidth="68" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="4*" MinWidth="68" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="4*" MinWidth="68" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <!--XY-->
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{ThemeResource AppForeground}" Style="{StaticResource BaseTextBlockStyle}"
                                                   local:Res.UT="Transform_X"/>
                                        <hsvColorPickers:NumberButton x:Name="TXButton" Grid.Column="1" Minimum="-16384" Maximum="16384" />
                                        <TextBlock Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{ThemeResource AppForeground}" Style="{StaticResource BaseTextBlockStyle}"
                                                   local:Res.UT="Transform_Y"/>
                                        <hsvColorPickers:NumberButton x:Name="TYButton" Grid.Column="1" Grid.Row="1" Minimum="-16384" Maximum="16384" />
                                        <!--WH-->
                                        <TextBlock Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{ThemeResource AppForeground}" Style="{StaticResource BaseTextBlockStyle}"
                                                   local:Res.UT="Transform_W"/>
                                        <hsvColorPickers:NumberButton x:Name="TWButton" Grid.Column="3" Minimum="-16384" Maximum="16384" />
                                        <TextBlock Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{ThemeResource AppForeground}" Style="{StaticResource BaseTextBlockStyle}"
                                                   local:Res.UT="Transform_H"/>
                                        <hsvColorPickers:NumberButton x:Name="THButton" Grid.Column="3" Grid.Row="1" Minimum="-16384" Maximum="16384" />
                                        <!--Skew-->
                                        <Canvas Grid.Column="4" Width="14" Height="14" HorizontalAlignment="Right" VerticalAlignment="Center" >
                                            <Polyline StrokeThickness="1.5" Stroke="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" >
                                                <Polyline.Points>
                                                    1,5 1,1 12,1 12,8 1,8 1,5
                                                </Polyline.Points>
                                            </Polyline>
                                            <Polyline StrokeThickness="1.5" Stroke="{ThemeResource ApplicationForegroundThemeBrush}" >
                                                <Polyline.Points>
                                                    1,5 1,1 12,5 12,12 1,8 1,5
                                                </Polyline.Points>
                                            </Polyline>
                                        </Canvas>
                                        <hsvColorPickers:NumberButton x:Name="TSButton" Grid.Column="5" Minimum="-180" Maximum="180" Unit="º"/>
                                        <!--Rotate-->
                                        <Canvas Grid.Column="4" Grid.Row="1" Width="14" Height="14" HorizontalAlignment="Right" VerticalAlignment="Center" >
                                            <Polyline StrokeThickness="1.5" Stroke="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" >
                                                <Polyline.Points>
                                                    12,12 11,8 9,4
                                                </Polyline.Points>
                                            </Polyline>
                                            <Polyline StrokeThickness="1.5" Stroke="{ThemeResource ApplicationForegroundThemeBrush}" >
                                                <Polyline.Points>
                                                    14,12 2,12 11,2
                                                </Polyline.Points>
                                            </Polyline>
                                        </Canvas>
                                        <hsvColorPickers:NumberButton x:Name="TRButton" Grid.Column="5" Grid.Row="1" Minimum="-180" Maximum="180" Unit="º"/>
                                    </Grid>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="FreeTransform">
                                <StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <controls:MovePicker x:Name="LTPicker" Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" />
                                        <controls:MovePicker x:Name="RTPicker" Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" />
                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <controls:MovePicker x:Name="LBPicker" Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" />
                                        <controls:MovePicker x:Name="RBPicker" Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" />
                                    </StackPanel>
                                </StackPanel>
                            </local:OptionCase>


                            <local:OptionCase Value="DisplacementLiquefaction">
                                <StackPanel>
                                    <ListBox x:Name="DisplacementLiquefactionModeComboBox" SelectedIndex="0" Margin="10,4" Style="{StaticResource AppSegmentListBoxStyle}"
                                             local:Res.UTT="DisplacementLiquefaction_Tool">
                                        <ListBoxItem local:Res.UC="DisplacementLiquefaction_Push"/>
                                        <ListBoxItem local:Res.UC="DisplacementLiquefaction_Pinch"/>
                                        <ListBoxItem local:Res.UC="DisplacementLiquefaction_Expand"/>
                                        <ListBoxItem local:Res.UC="DisplacementLiquefaction_TwirlLeft"/>
                                        <ListBoxItem local:Res.UC="DisplacementLiquefaction_TwirlRight"/>
                                        <ListBoxItem local:Res.UC="DisplacementLiquefaction_Reset"/>
                                    </ListBox>
                                    <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="DisplacementLiquefactionSizeSlider" Value="22" Minimum="1" Maximum="500" Decrease="True" TickFrequency="99" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                      local:Res.UH="DisplacementLiquefaction_Size"/>
                                        <hsvColorPickers:NumberSlider x:Name="DisplacementLiquefactionPressureSlider" Value="12" Minimum="10" Maximum="100" Unit="%" Decrease="True" TickFrequency="30" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                      local:Res.UH="DisplacementLiquefaction_Pressure"/>
                                    </StackPanel>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="GradientMapping">
                                <hsvColorPickers:GradientStopSelectorWithUI x:Name="GradientMappingSelector" Width="{x:Bind ReverseDevicePhoneToWidth740Converter(Device), Mode=OneWay}"/>
                            </local:OptionCase>
                            <local:OptionCase Value="RippleEffect">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="FrequencySlider" Value="140" Minimum="0" Maximum="300" Decrease="True" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                  local:Res.UH="RippleEffect_Frequency"/>
                                    <hsvColorPickers:NumberSlider x:Name="PhaseSlider" Minimum="-100" Maximum="0" Unit="º" Decrease="True" TickFrequency="20" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                  local:Res.UH="RippleEffect_Phase"/>
                                    <hsvColorPickers:NumberSlider x:Name="AmplitudeSlider" Value="60" Minimum="0" Maximum="200" Decrease="True" TickFrequency="40" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="RippleEffect_Amplitude"/>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="Threshold">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="ThresholdSlider" MinWidth="280" Minimum="-150" Maximum="150" Unit="º" Decrease="True" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  local:Res.UH="Threshold">
                                        <Control.Background>
                                            <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Black" Offset="0"/>
                                                <GradientStop Color="White" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Control.Background>
                                    </hsvColorPickers:NumberSlider>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <hsvColorPickers:ColorButtonBase x:Name="ThresholdColor0Button"/>
                                        <hsvColorPickers:ColorButtonBase x:Name="ThresholdColor1Button" Grid.Column="2"/>
                                        <Button x:Name="ThresholdReverseButton" Grid.Column="1" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}"
                                                local:Res.UC="Threshold_Reverse"/>
                                    </Grid>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="HSB">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <Canvas Margin="5,0" Width="162" Height="162">
                                        <Ellipse Width="162" Height="162" StrokeThickness="16" Fill="{ThemeResource AppOpacity}">
                                            <Shape.Stroke>
                                                <ImageBrush ImageSource="{x:Bind WheelImageSource.ImageSource}"/>
                                            </Shape.Stroke>
                                        </Ellipse>
                                        <Ellipse Width="162" Height="162" StrokeThickness="8">
                                            <UIElement.RenderTransformOrigin>
                                                0.5, 0.5
                                            </UIElement.RenderTransformOrigin>
                                            <UIElement.RenderTransform>
                                                <RotateTransform Angle="{x:Bind HSBHueSlider.Value, Mode=OneWay}"/>
                                            </UIElement.RenderTransform>
                                            <Shape.Stroke>
                                                <ImageBrush ImageSource="{x:Bind WheelImageSource.ImageSource}"/>
                                            </Shape.Stroke>
                                        </Ellipse>
                                        <Ellipse Canvas.Left="7" Canvas.Top="7" Width="148" Height="148" StrokeThickness="2" Stroke="White"/>
                                    </Canvas>
                                    <StackPanel Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}">
                                        <hsvColorPickers:NumberSlider x:Name="HSBHueSlider" Maximum="360" Unit="º" TickFrequency="60" TickPlacement="Outside" Foreground="{x:Bind Foreground, Mode=OneWay}"
                                                                      local:Res.UH="HSB_Hue">
                                            <Control.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="Red" Offset="0"/>
                                                    <GradientStop Color="Yellow" Offset="0.16666667"/>
                                                    <GradientStop Color="Lime" Offset="0.33333333"/>
                                                    <GradientStop Color="Cyan" Offset="0.5"/>
                                                    <GradientStop Color="Blue" Offset="0.66666667"/>
                                                    <GradientStop Color="Fuchsia" Offset="0.83333333"/>
                                                    <GradientStop Color="Red" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Control.Background>
                                        </hsvColorPickers:NumberSlider>
                                        <hsvColorPickers:NumberSlider x:Name="HSBSaturationSlider" Value="100" Minimum="0" Maximum="400" Unit="%" TickPlacement="Outside" Foreground="{x:Bind Foreground, Mode=OneWay}"
                                                                      local:Res.UH="HSB_Saturation">
                                            <Control.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="Gray" Offset="0"/>
                                                    <GradientStop Color="DodgerBlue" Offset="0.5"/>
                                                </LinearGradientBrush>
                                            </Control.Background>
                                        </hsvColorPickers:NumberSlider>
                                        <hsvColorPickers:NumberSlider x:Name="HSBBrightnessSlider" Value="0" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{x:Bind Foreground, Mode=OneWay}"
                                                                      local:Res.UH="HSB_Brightness">
                                            <Control.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="Black" Offset="0"/>
                                                    <GradientStop Color="White" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Control.Background>
                                        </hsvColorPickers:NumberSlider>
                                    </StackPanel>
                                </StackPanel>
                            </local:OptionCase>


                            <local:OptionCase Value="Exposure">
                                <hsvColorPickers:NumberSlider x:Name="ExposureSlider" Margin="0,5" Minimum="-200" Maximum="200" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="Exposure">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="White" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>
                            <local:OptionCase Value="Brightness">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <StackPanel Margin="0,22" MinWidth="90" Spacing="4" Orientation="Vertical">
                                        <Button x:Name="Brightness150Button" CornerRadius="4" Height="44" BorderThickness="1" HorizontalAlignment="Stretch">
                                            150
                                        </Button>
                                        <Button x:Name="Brightness125Button" CornerRadius="4" Height="44" BorderThickness="1" HorizontalAlignment="Stretch">
                                            125
                                        </Button>
                                        <Button x:Name="Brightness100Button" CornerRadius="4" Height="44" BorderThickness="1" HorizontalAlignment="Stretch">
                                            100
                                        </Button>
                                        <Button x:Name="Brightness75Button" CornerRadius="4" Height="44" BorderThickness="1" HorizontalAlignment="Stretch">
                                            75
                                        </Button>
                                        <Button x:Name="Brightness50Button" CornerRadius="4" Height="44" BorderThickness="1" HorizontalAlignment="Stretch">
                                            50
                                        </Button>
                                    </StackPanel>
                                    <controls:SplinePicker x:Name="BrightnessPicker" Background="{ThemeResource AppBackground}"/>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="Saturation">
                                <hsvColorPickers:NumberSlider x:Name="SaturationSlider" Margin="0,5" Value="100" Minimum="0" Maximum="200" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="Saturation">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="Gray" Offset="0"/>
                                            <GradientStop Color="#00A5FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>
                            <local:OptionCase Value="HueRotation">
                                <hsvColorPickers:NumberSlider x:Name="HueRotationSlider" Margin="0,5" Minimum="0" Maximum="360" Unit="º" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="HueRotation_Angle">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#FFCE3B" Offset="0"/>
                                            <GradientStop Color="#72C075" Offset="0.125"/>
                                            <GradientStop Color="#46A7F6" Offset="0.25"/>
                                            <GradientStop Color="#784BB0" Offset="0.375"/>
                                            <GradientStop Color="#A336B5" Offset="0.5"/>
                                            <GradientStop Color="#EB2E6E" Offset="0.625"/>
                                            <GradientStop Color="#EC5449" Offset="0.75"/>
                                            <GradientStop Color="#FFA827" Offset="0.875"/>
                                            <GradientStop Color="#FFCE3B" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>
                            <local:OptionCase Value="Contrast">
                                <hsvColorPickers:NumberSlider x:Name="ContrastSlider" Margin="0,5" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="Contrast">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#888888" Offset="0"/>

                                            <GradientStop Color="#6D6D6D" Offset="0.4"/>
                                            <GradientStop Color="#909090" Offset="0.5"/>

                                            <GradientStop Color="#353535" Offset="0.6"/>
                                            <GradientStop Color="#C9C9C9" Offset="0.7"/>

                                            <GradientStop Color="#000000" Offset="0.8"/>
                                            <GradientStop Color="#FFFFFF" Offset="1"/>

                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>
                            <local:OptionCase Value="Temperature">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="TemperatureSlider" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="Temperature">
                                        <Control.Background>
                                            <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="#3EADF5" Offset="0"/>
                                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                                <GradientStop Color="#F99652" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Control.Background>
                                    </hsvColorPickers:NumberSlider>
                                    <hsvColorPickers:NumberSlider x:Name="TintSlider" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="Temperature_Tint">
                                        <Control.Background>
                                            <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="#9680C9" Offset="0"/>
                                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                                <GradientStop Color="#80763E" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Control.Background>
                                    </hsvColorPickers:NumberSlider>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="HighlightsAndShadows">
                                <StackPanel Margin="0,5" Orientation="{x:Bind DeviceHubToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="ShadowsSlider" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="HighlightsAndShadows_Shadows">
                                            <Control.Background>
                                                <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                                    <GradientStop Color="Black" Offset="0"/>
                                                    <GradientStop Color="Gray" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Control.Background>
                                        </hsvColorPickers:NumberSlider>
                                        <hsvColorPickers:NumberSlider x:Name="HighlightsSlider" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="HighlightsAndShadows_Highlights">
                                            <Control.Background>
                                                <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                                    <GradientStop Color="Gray" Offset="0"/>
                                                    <GradientStop Color="White" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Control.Background>
                                        </hsvColorPickers:NumberSlider>
                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="ClaritySlider" Minimum="-100" Maximum="100" Decrease="True" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="HighlightsAndShadows_Clarity"/>
                                        <hsvColorPickers:NumberSlider x:Name="BlurSlider" Value="125" Minimum="0" Maximum="1000" Decrease="True" TickFrequency="250" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="HighlightsAndShadows_Blur"/>
                                    </StackPanel>
                                </StackPanel>
                            </local:OptionCase>


                            <local:OptionCase Value="GammaTransfer">
                                <StackPanel Margin="0,5" Orientation="{x:Bind DeviceHubToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <Border Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <ListBox SelectedIndex="0" Style="{StaticResource AppSegmentListBoxStyle}"
                                                     local:Res.UTT="GammaTransfer_ChannelSelect">
                                                <ListBoxItem x:Name="GTAItem" local:Res.UC="GammaTransfer_Alpha"/>
                                                <ListBoxItem x:Name="GTRItem" local:Res.UC="GammaTransfer_Red"/>
                                                <ListBoxItem x:Name="GTGItem" local:Res.UC="GammaTransfer_Green"/>
                                                <ListBoxItem x:Name="GTBItem" local:Res.UC="GammaTransfer_Blue"/>
                                            </ListBox>
                                        </Border>
                                        <!--#region Amplitude-->
                                        <hsvColorPickers:NumberSlider x:Name="GTAASlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Visibility="{x:Bind GTAItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Amplitude"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTARSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="Red"
                                                                      Visibility="{x:Bind GTRItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Amplitude"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTAGSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="GreenYellow"
                                                                      Visibility="{x:Bind GTGItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Amplitude"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTABSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="DodgerBlue"
                                                                      Visibility="{x:Bind GTBItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" 
                                                                      local:Res.UH="GammaTransfer_Amplitude"/>
                                        <!--#endregion-->
                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <!--#region Exponent-->
                                        <hsvColorPickers:NumberSlider x:Name="GTEASlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Visibility="{x:Bind GTAItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Exponent"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTERSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="Red"
                                                                      Visibility="{x:Bind GTRItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Exponent"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTEGSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="GreenYellow"
                                                                      Visibility="{x:Bind GTGItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Exponent"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTEBSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="DodgerBlue"
                                                                      Visibility="{x:Bind GTBItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Exponent"/>
                                        <!--#endregion-->
                                        <!--#region Offset-->
                                        <hsvColorPickers:NumberSlider x:Name="GTOASlider" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" 
                                                                      Visibility="{x:Bind GTAItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Offset"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTORSlider" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="Red"
                                                                      Visibility="{x:Bind GTRItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Offset"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTOGSlider" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="GreenYellow"
                                                                      Visibility="{x:Bind GTGItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Offset"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTOBSlider" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="DodgerBlue"
                                                                      Visibility="{x:Bind GTBItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GammaTransfer_Offset"/>
                                        <!--#endregion-->
                                    </StackPanel>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="Vignette">
                                <hsvColorPickers:NumberSlider x:Name="VignetteSlider" Margin="0,5" Value="10" Decrease="True" Unit="º" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="Vignette_Amount"/>
                            </local:OptionCase>
                            <local:OptionCase Value="ColorMatch">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <hsvColorPickers:ColorButtonBase x:Name="ColorMatchSourceButton"/>
                                    <hsvColorPickers:ColorButtonBase x:Name="ColorMatchDestinationButton" Grid.Column="2"/>
                                    <Line Grid.Column="1" X2="64" VerticalAlignment="Center" StrokeThickness="1" Stroke="{ThemeResource ApplicationForegroundThemeBrush}" />
                                </Grid>
                            </local:OptionCase>


                            <local:OptionCase Value="GaussianBlur">
                                <hsvColorPickers:NumberSlider x:Name="GaussianBlurSlider" Margin="0,5" Value="10" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="GaussianBlur_BlurAmount"/>
                            </local:OptionCase>
                            <local:OptionCase Value="DirectionalBlur">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="DirectionalBlurSlider" Value="10" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="DirectionalBlur_BlurAmount"/>
                                    <hsvColorPickers:NumberSlider x:Name="DirectionalBlurAngleSlider" Minimum="0" Maximum="360" Unit="º" Decrease="True" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="DirectionalBlur_Angle"/>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="Sharpen">
                                <hsvColorPickers:NumberSlider x:Name="SharpenSlider" Margin="0,5" Value="10" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="Sharpen_Amount"/>
                            </local:OptionCase>
                            <local:OptionCase Value="Shadow">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="ShadowAmountSlider" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="Shadow_Amount"/>
                                    <hsvColorPickers:NumberSlider x:Name="ShadowOpacitySlider" Value="50" Unit="º" Decrease="True" TickFrequency="20" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="Shadow_Opacity"/>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60" 
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <hsvColorPickers:ColorButtonBase x:Name="ShadowColorButton"/>
                                        <Button Grid.Column="1" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            <Button.Flyout>
                                                <Flyout Placement="Top" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
                                                    <hsvColorPickers:NumberSlider x:Name="ShadowXSlider" Margin="0,5" Width="280" Minimum="-200" Maximum="200" Foreground="{ThemeResource AppForeground}"
                                                            local:Res.UH="Shadow_X"/>
                                                </Flyout>
                                            </Button.Flyout>
                                        </Button>
                                        <Button Grid.Column="2" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            <Button.Flyout>
                                                <Flyout Placement="Top" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
                                                    <hsvColorPickers:NumberSlider x:Name="ShadowYSlider" Margin="0,5" Width="280" Minimum="-200" Maximum="200" Foreground="{ThemeResource AppForeground}"
                                                        local:Res.UH="Shadow_Y"/>
                                                </Flyout>
                                            </Button.Flyout>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="EdgeDetection">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="EdgeDetectionSlider" Value="50" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                  local:Res.UH="EdgeDetection_Amount"/>
                                    <hsvColorPickers:NumberSlider x:Name="EdgeDetectionBlurAmountSlider" Decrease="True" TickFrequency="20" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="EdgeDetection_BlurAmount"/>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60" 
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <ToggleButton x:Name="EdgeDetectionButton" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch"
                                                      local:Res.UC="EdgeDetection_OverlayEdges"/>
                                        <local:EdgeDetectionModeButton x:Name="EdgeDetectionModeButton" Grid.Column="1" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch"/>
                                    </Grid>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="Morphology">
                                <local:MorphologyNumberSlider x:Name="MorphologySlider" Margin="0,5" Minimum="-90" Maximum="90" TickFrequency="30" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="Morphology_Size">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
