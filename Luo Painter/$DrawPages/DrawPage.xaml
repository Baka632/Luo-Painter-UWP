                                <hsvColorPickers:NumberSlider x:Name="PentagonPointsSlider" Margin="0,5" Value="5" Minimum="4" Maximum="36" Decrease="True" TickFrequency="6" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="GeometryPentagon_Points"/>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryStarTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="StarPointsSlider" Value="5" Minimum="4" Maximum="36" Decrease="True" TickFrequency="6" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="GeometryStar_Points"/>
                                    <hsvColorPickers:NumberSlider x:Name="StarInnerRadiusSlider" Value="40" Minimum="0" Maximum="100" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="GeometryStar_InnerRadius"/>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryDonutTransform">
                                <hsvColorPickers:NumberSlider x:Name="DonutHoleRadiusSlider" Margin="0,5" Value="50" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                        local:Res.UH="GeometryDonut_HoleRadius"/>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryCogTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind DeviceHubToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="CogCountSlider" Value="8" Minimum="4" Maximum="36" Decrease="True" TickFrequency="6" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GeometryCog_Count"/>
                                        <hsvColorPickers:NumberSlider x:Name="CogInnerRadiusSlider" Value="70" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GeometryCog_InnerRadius"/>
                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="CogToothSlider" Value="30" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GeometryCog_Tooth"/>
                                        <hsvColorPickers:NumberSlider x:Name="CogNotchSlider" Value="60" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="GeometryCog_Notch"/>
                                    </StackPanel>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryPieTransform">
                                <hsvColorPickers:NumberSlider x:Name="PieSweepAngleSlider" Margin="0,5" Value="90" Minimum="0" Maximum="360" Unit="º" Decrease="True" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="GeometryPie_SweepAngle"/>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryCookieTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="CookieInnerRadiusSlider" Value="50" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="GeometryCookie_InnerRadius"/>
                                    <hsvColorPickers:NumberSlider x:Name="CookieSweepAngleSlider" Value="90" Minimum="0" Maximum="360" Unit="º" Decrease="True" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="GeometryCookie_SweepAngle"/>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryArrowTransform">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ListBox x:Name="ArrowLeftTailComboBox" Width="140" SelectedIndex="0" Style="{StaticResource AppSegmentListBoxStyle}">
                                            <ListBoxItem local:Res.EIWTT="ArrowNone"/>
                                            <ListBoxItem local:Res.EIWTT="ArrowArrow"/>
                                        </ListBox>
                                        <ListBox x:Name="ArrowRightTailComboBox" Width="140" SelectedIndex="1" Style="{StaticResource AppSegmentListBoxStyle}">
                                            <ListBoxItem local:Res.EIWTT="ArrowNone"/>
                                            <ListBoxItem local:Res.EIWTT="ArrowArrow"/>
                                        </ListBox>
                                    </StackPanel>
                                    <hsvColorPickers:NumberSlider x:Name="ArrowWidthSlider" Margin="0,5" Value="50" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  local:Res.UH="GeometryArrow_Width"/>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryCapsuleTransform">
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryHeartTransform">
                                <hsvColorPickers:NumberSlider x:Name="HeartSpreadSlider" Margin="0,5" Value="80" Minimum="0" Maximum="100" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              local:Res.UH="GeometryHeart_Spread"/>
                            </local:OptionCase>


                            <local:OptionCase Value="PatternGridTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind DeviceHubToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <ListBox x:Name="GridComboBox" SelectedIndex="0" Margin="10,4" Style="{StaticResource AppSegmentListBoxStyle}"
                                                 Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <ListBoxItem local:Res.EIWTT="GridGrid"/>
                                            <ListBoxItem x:Name="GridColumnItem" local:Res.EIWTT="GridColumn"/>
                                            <ListBoxItem x:Name="GridRowItem" local:Res.EIWTT="GridRow"/>
                                        </ListBox>
                                        <hsvColorPickers:NumberSlider x:Name="GridStrokeWidthSlider" Value="2" Minimum="1" Maximum="32" Decrease="True" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="PatternGrid_StrokeWidth"/>
                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="GridColumnSpanSlider" Value="30" Minimum="5" Maximum="200" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      IsEnabled="{x:Bind ReverseBooleanConverter(GridRowItem.IsSelected), Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="PatternGrid_ColumnSpan"/>
                                        <hsvColorPickers:NumberSlider x:Name="GridRowSpanSlider" Value="30" Minimum="5" Maximum="200" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      IsEnabled="{x:Bind ReverseBooleanConverter(GridColumnItem.IsSelected), Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      local:Res.UH="PatternGrid_RowSpan"/>
                                    </StackPanel>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="PatternDiagonalTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="PatternDiagonalFrequencySlider" Value="140" Minimum="0" Maximum="300" Decrease="True" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="PatternDiagonal_Frequency"/>
                                    <hsvColorPickers:NumberSlider x:Name="PatternDiagonalPhaseSlider" Minimum="-100" Maximum="0" Decrease="True" Unit="º" TickFrequency="20" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="PatternDiagonal_Phase"/>
                                    <hsvColorPickers:NumberSlider x:Name="PatternDiagonalAmplitudeSlider" Value="60" Minimum="0" Maximum="200" Decrease="True" TickFrequency="40" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="PatternDiagonal_Amplitude"/>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="PatternSpottedTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="SpottedRadiusSlider" Value="8" Minimum="5" Maximum="100" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="PatternSpotted_Radius"/>
                                    <hsvColorPickers:NumberSlider x:Name="SpottedSpanSlider" Value="30" Minimum="5" Maximum="200" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="PatternSpotted_Span"/>
                                    <hsvColorPickers:NumberSlider x:Name="SpottedFadeSlider" Value="0" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  local:Res.UH="PatternSpotted_Fade"/>
                                </StackPanel>
                            </local:OptionCase>
                        </local:OptionSwitchPresenter>

                    </Grid>

                </Grid>
            </SplitView>
        </SplitView>


        <!--Head-->
        <Grid Height="50" VerticalAlignment="Top" >

            <Button x:Name="DockLeftButton" Width="90" Height="50" HorizontalAlignment="Left" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}"
                    local:Cmd.BB="DockLeft" 
                    local:Res.OTT="DockLeft"
                    Command="{x:Bind Command}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <SymbolIcon Margin="4,0" Symbol="DockLeft"/>
                    <FontIcon Glyph="&#xE26C;" FontSize="8" FontWeight="Bold" FontFamily="Segoe MDL2 Assets">
                        <UIElement.RenderTransformOrigin>
                            0.5, 0.5
                        </UIElement.RenderTransformOrigin>
                        <UIElement.RenderTransform>
                            <RotateTransform Angle="{x:Bind DockLeftConverter(SplitLeftView.IsPaneOpen), Mode=OneWay}"/>
                        </UIElement.RenderTransform>
                    </FontIcon>
                </StackPanel>
            </Button>

            <Button x:Name="DockRightButton" Width="90" Height="50" HorizontalAlignment="Right" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}"
                    local:Cmd.BB="DockRight" 
                    local:Res.OTT="DockRight"
                    Command="{x:Bind Command}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE26B;" FontSize="8" FontWeight="Bold" FontFamily="Segoe MDL2 Assets">
                        <UIElement.RenderTransformOrigin>
                            0.5, 0.5
                        </UIElement.RenderTransformOrigin>
                        <UIElement.RenderTransform>
                            <RotateTransform Angle="{x:Bind DockRightConverter(SplitRightView.IsPaneOpen), Mode=OneWay}"/>
                        </UIElement.RenderTransform>
                    </FontIcon>
                    <SymbolIcon Margin="4,0" Symbol="DockRight"/>
                </StackPanel>
            </Button>

            <Grid x:Name="HeadGrid" CornerRadius="6" Height="50" MaxWidth="1120" BorderThickness="1" BorderBrush="{ThemeResource AppStroke}" Background="{ThemeResource AppBackground}" >

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                    <Button Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}"
                            local:Cmd.BB="Home"
                            local:Res.OTT="Home"
                            Command="{x:Bind Command}" >
                        <SymbolIcon Symbol="Home"/>
                    </Button>
                    <Button Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Style="{StaticResource TextBlockButtonStyle}"
                            local:Res.OTT="ExportMenu">
                        <Button.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutSeparator Style="{StaticResource AppHeaderMenuFlyoutSeparator}"
                                             local:Res.OAK="FileMenu"/>
                                <MenuFlyoutItem local:Cmd.MFI="Home" Command="{x:Bind Command}">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Home"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:Cmd.MFI="Save" Command="{x:Bind Command}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                                    </UIElement.KeyboardAccelerators>
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Save"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSubItem local:Cmd.MFS="ExportMenu">
                                    <MenuFlyoutSubItem.Icon>
                                        <SymbolIcon Symbol="NewWindow"/>
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutItem local:Cmd.MFIWI="JPEG" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="PNG" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="BMP" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="GIF" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="TIFF" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:Cmd.MFI="CropCanvas" Command="{x:Bind Command}">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Crop"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSubItem local:Cmd.MFS="ResizeCanvas">
                                    <MenuFlyoutSubItem.Icon>
                                        <SymbolIcon Symbol="StopSlideShow"/>
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutItem local:Cmd.MFIWI="Stretch" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="Extend" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="Offset" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSubItem local:Cmd.MFS="RotateCanvas">
                                    <MenuFlyoutSubItem.Icon>
                                        <SymbolIcon Symbol="Orientation"/>
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutItem local:Cmd.MFIWI="FlipHorizontal" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="FlipVertical" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="LeftTurn" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="RightTurn" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:Cmd.MFIWI="OverTurn" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:Cmd.MFI="Close" Command="{x:Bind Command}">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Cancel"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                        <elements:AnimationIcon x:Name="AnimationIcon"/>
                    </Button>
                    <Button x:Name="FullScreenButton" Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}"
                            local:Res.OTT="FullScreen" 
                            local:Cmd.BB="FullScreen" 
                            Command="{x:Bind Command}" >
                        <SymbolIcon Symbol="FullScreen" />
                    </Button>
                    <Button x:Name="UnFullScreenButton" Visibility="Collapsed" Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}"
                            local:Res.OTT="UnFullScreen" 
                            local:Cmd.BB="UnFullScreen" 
                            Command="{x:Bind Command}" >
                        <SymbolIcon Symbol="BackToWindow" />
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Button x:Name="UndoButton" Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}"
                            local:Res.OTT="Undo" 
                            local:Cmd.BB="Undo" 
                            Command="{x:Bind Command}" >
                        <UIElement.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="Z"/>
                        </UIElement.KeyboardAccelerators>
                        <SymbolIcon Symbol="Undo"/>
                    </Button>
                    <Button x:Name="RedoButton" Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}"
                            local:Res.OTT="Redo" 
                            local:Cmd.BB="Redo" 
                            Command="{x:Bind Command}" >
                        <UIElement.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="Y"/>
                        </UIElement.KeyboardAccelerators>
                        <SymbolIcon Symbol="Redo"/>
                    </Button>
                    <controls:ColorButton x:Name="ColorButton" Eyedropper="{x:Bind Eyedropper}" ClickEyedropper="{x:Bind ClickEyedropper}">
                        <Control.BorderBrush>
                            <ImageBrush ImageSource="{x:Bind WheelImageSource.ImageSource}"/>
                        </Control.BorderBrush>
                    </controls:ColorButton>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Style="{StaticResource TextBlockButtonStyle}" 
                            local:Res.OIWTT="EditMenu">
                        <Button.Flyout>
                            <MenuFlyout x:Name="EditMenuFlyout" Placement="Bottom">
                                <!--Edit-->
                                <MenuFlyoutSeparator Style="{StaticResource AppHeaderMenuFlyoutSeparator}"
                                             local:Res.OAK="EditMenu"/>
                                <MenuFlyoutItem local:Cmd.MFIWI="Cut" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="X"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:Cmd.MFIWI="Copy" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="C"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem x:Name="PasteItem" local:Cmd.MFIWI="Paste" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="V"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem x:Name="ClearItem" local:Cmd.MFIWI="Clear" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Key="Back"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <!--Select-->
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:Cmd.MFIWI="All" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="A"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:Cmd.MFIWI="Deselect" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="D"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:Cmd.MFIWI="MarqueeInvert" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="I"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:Cmd.MFIWI="Pixel" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="P"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:Cmd.MFIWI="Feather" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:Cmd.MFIWI="MarqueeTransform" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:Cmd.MFIWI="Grow" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:Cmd.MFIWI="Shrink" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                            </MenuFlyout>
                        </Button.Flyout>
                        <!--EditMenu-->
                    </Button>
                    <Button Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Style="{StaticResource TextBlockButtonStyle}" 
                            local:Res.OIWTT="AdjustmentMenu">
                        <Button.Flyout>
                            <Flyout x:Name="EffectFlyout" Placement="Top" Windows10version1903:ShouldConstrainToRootBounds="False" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
                                <controls:EffectListView x:Name="EffectListView"/>
                            </Flyout>
                        </Button.Flyout>
                        <!--AdjustmentMenu-->
                    </Button>
                    <Button x:Name="MoreButton" Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Style="{StaticResource TextBlockButtonStyle}" 
                            local:Res.OIWTT="OtherMenu">
                        <Button.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <!--Others-->
                                <MenuFlyoutSeparator Style="{StaticResource AppHeaderMenuFlyoutSeparator}"
                                             local:Res.OAK="OtherMenu"/>
                                <MenuFlyoutItem local:Cmd.MFIWI="Move" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="M"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:Cmd.MFIWI="Transform" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="T"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:Cmd.MFIWI="FreeTransform" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:Cmd.MFIWI="DisplacementLiquefaction" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:Cmd.MFIWI="GradientMapping" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:Cmd.MFIWI="RippleEffect" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:Cmd.MFIWI="Threshold" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:Cmd.MFIWI="HSB" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                            </MenuFlyout>
                        </Button.Flyout>
                        <!--OtherMenu-->
                    </Button>

                </StackPanel>

            </Grid>


            <!--AppBar-->
            <Grid x:Name="AppBarHeadGrid" ColumnSpacing="6" Padding="6,0" Visibility="Collapsed" CornerRadius="6" Height="50" MaxWidth="1120" BorderThickness="1" BorderBrush="{ThemeResource AppStroke}" Background="{ThemeResource AppBackground}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*" MinWidth="50" MaxWidth="80"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="AppBarPrimaryButton" Grid.Column="2" CornerRadius="4" Height="40" HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderThickness="1" Style="{StaticResource AccentButtonStyle}" 
                        local:Res.UC="Apply"/>
                <Button x:Name="AppBarBackButton" Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}"
                        local:Res.UTT="Back">
                    <SymbolIcon Symbol="Back"/>
                </Button>
                <TextBlock
                    x:Name="TitleTextBlock"
                    Grid.Column="1" 
                    Margin="16,0"
                    IsTextSelectionEnabled="True"
                    FontWeight="Medium" 
                    TextTrimming="CharacterEllipsis" 
                    FontSize="20" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Center" 
                    OpticalMarginAlignment="TrimSideBearings"
                    >   
                    <!--Title-->
                </TextBlock>
            </Grid>

        </Grid>


        <!--Dialog-->
        <controls:ExportDialog x:Name="ExportDialog" />
        <controls:TextureDialog x:Name="TextureDialog" />
        <controls:StretchDialog x:Name="StretchDialog" />
        <controls:ExtendDialog x:Name="ExtendDialog" />
        <controls:OffsetDialog x:Name="OffsetDialog" />


        <!--Tip-->
        <controls:ToastTip x:Name="ToastTip" Visibility="Collapsed" IsHitTestVisible="False" />
        <controls:KeyboardShortcuts x:Name="KeyboardShortcuts" Visibility="Collapsed" />
        <Border IsHitTestVisible="False" CornerRadius="6" Padding="12,3" MinHeight="40" Background="Red" RequestedTheme="Dark" HorizontalAlignment="Center" VerticalAlignment="Center"
                Visibility="{x:Bind ReverseBooleanToVisibilityConverter(GradientMappingSelector.IsHitTestVisible), Mode=OneWay}">
            <StackPanel Orientation="Horizontal">
                <SymbolIcon Symbol="Delete"/>
                <ContentControl Width="12"/>
                <TextBlock FontWeight="Medium" VerticalAlignment="Center"
                           local:Res.UT="GradientMapping_DropRemove"/>
            </StackPanel>
        </Border>


        <hsvColorPickers:Eyedropper x:Name="Eyedropper" Visibility="Collapsed"/>
        <hsvColorPickers:ClickEyedropper x:Name="ClickEyedropper" Visibility="Collapsed"/>

    </Grid>
</Page>