                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                        <ListBoxItem x:Name="BrushLinearGradientItem">Linear</ListBoxItem>
                                        <ListBoxItem x:Name="BrushRadialGradientItem">Radial</ListBoxItem>
                                        <ListBoxItem x:Name="BrushEllipticalGradientItem">Elliptical</ListBoxItem>
                                    </ListBox>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60"
                                          Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <Rectangle RadiusX="4" RadiusY="4" Height="40" StrokeThickness="1" Stroke="{ThemeResource AppStroke}">
                                            <Rectangle.Fill>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
