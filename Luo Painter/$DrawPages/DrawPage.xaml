                                        <ToggleButton x:Name="BrushReverseButton" Grid.Column="2" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            Reverse
                                        </ToggleButton>
                                    </Grid>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="Transparency">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <ListBox x:Name="TransparencyComboBox" SelectedIndex="0" Margin="10,4" Style="{StaticResource AppSegmentListBoxStyle}"
                                        Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <ToolTipService.ToolTip>
                                            <ToolTip x:Name="TransparencyToolTip" Style="{StaticResource AppToolTipStyle}">
                                                Transparency Type
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                        <ListBoxItem x:Name="TransparencyLinearGradientItem">Linear</ListBoxItem>
                                        <ListBoxItem x:Name="TransparencyRadialGradientItem">Radial</ListBoxItem>
                                        <ListBoxItem x:Name="TransparencyEllipticalGradientItem">Elliptical</ListBoxItem>
                                    </ListBox>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60"
                                          Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <Rectangle Grid.ColumnSpan="2" RadiusX="4" RadiusY="4" Height="40" StrokeThickness="1" Stroke="{ThemeResource AppStroke}">
                                            <Rectangle.Fill>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
