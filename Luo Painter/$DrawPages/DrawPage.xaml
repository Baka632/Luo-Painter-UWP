                                <hsvColorPickers:NumberSlider x:Name="RoundRectCornerSlider" Margin="0,5" Value="12" Minimum="0" Maximum="50" Unit="%" Decrease="True" TickFrequency="10" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}">
                                    <Slider.Header>
                                        Corner
                                    </Slider.Header>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryTriangleTransform">
                                <hsvColorPickers:NumberSlider x:Name="TriangleCenterSlider" Margin="0,5" Value="50" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}">
                                    <Slider.Header>
                                        Center Point
                                    </Slider.Header>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryDiamondTransform">
                                <hsvColorPickers:NumberSlider x:Name="DiamondMidSlider" Margin="0,5" Value="50" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}">
                                    <Slider.Header>
                                        Mid Point
                                    </Slider.Header>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryPentagonTransform">
                                <hsvColorPickers:NumberSlider x:Name="PentagonPointsSlider" Margin="0,5" Value="5" Minimum="4" Maximum="36" Decrease="True" TickFrequency="6" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}">
                                    <Slider.Header>
                                        Points
                                    </Slider.Header>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryStarTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="StarPointsSlider" Value="5" Minimum="4" Maximum="36" Decrease="True" TickFrequency="6" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
