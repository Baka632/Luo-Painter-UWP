                                        <Slider.Header>
                                            Points
                                        </Slider.Header>
                                    </hsvColorPickers:NumberSlider>
                                    <hsvColorPickers:NumberSlider x:Name="StarInnerRadiusSlider" Value="40" Minimum="0" Maximum="100" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Slider.Header>
                                            Inner Radius
                                        </Slider.Header>
                                    </hsvColorPickers:NumberSlider>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryDonutTransform">
                                <hsvColorPickers:NumberSlider x:Name="DonutHoleRadiusSlider" Margin="0,5" Value="50" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}">
                                    <Slider.Header>
                                        Hole Radius
                                    </Slider.Header>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryCogTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind DeviceHubToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="CogCountSlider" Value="8" Minimum="4" Maximum="36" Decrease="True" TickFrequency="6" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <Slider.Header>
                                                Count
                                            </Slider.Header>
                                        </hsvColorPickers:NumberSlider>
                                        <hsvColorPickers:NumberSlider x:Name="CogInnerRadiusSlider" Value="70" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <Slider.Header>
                                                Inner Radius
                                            </Slider.Header>
                                        </hsvColorPickers:NumberSlider>
                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="CogToothSlider" Value="30" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <Slider.Header>
                                                Tooth
                                            </Slider.Header>
                                        </hsvColorPickers:NumberSlider>
                                        <hsvColorPickers:NumberSlider x:Name="CogNotchSlider" Value="60" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <Slider.Header>
                                                Notch
                                            </Slider.Header>
                                        </hsvColorPickers:NumberSlider>
                                    </StackPanel>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryPieTransform">
                                <hsvColorPickers:NumberSlider x:Name="PieSweepAngleSlider" Margin="0,5" Value="90" Minimum="0" Maximum="360" Unit="º" Decrease="True" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}">
                                    <Slider.Header>
                                        Sweep Angle
                                    </Slider.Header>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryCookieTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="CookieInnerRadiusSlider" Value="50" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Slider.Header>
                                            Inner Radius
                                        </Slider.Header>
                                    </hsvColorPickers:NumberSlider>
                                    <hsvColorPickers:NumberSlider x:Name="CookieSweepAngleSlider" Value="90" Minimum="0" Maximum="360" Unit="º" Decrease="True" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Slider.Header>
                                            Sweep Angle
                                        </Slider.Header>
                                    </hsvColorPickers:NumberSlider>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryArrowTransform">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ListBox x:Name="ArrowLeftTailComboBox" Width="140" SelectedIndex="0" Style="{StaticResource AppSegmentListBoxStyle}">
                                            <ListBoxItem local:ContentExtensions.ElementIconWithToolTip="ArrowNone"/>
                                            <ListBoxItem local:ContentExtensions.ElementIconWithToolTip="ArrowArrow"/>
                                        </ListBox>
                                        <ListBox x:Name="ArrowRightTailComboBox" Width="140" SelectedIndex="1" Style="{StaticResource AppSegmentListBoxStyle}">
                                            <ListBoxItem local:ContentExtensions.ElementIconWithToolTip="ArrowNone"/>
                                            <ListBoxItem local:ContentExtensions.ElementIconWithToolTip="ArrowArrow"/>
                                        </ListBox>
                                    </StackPanel>
                                    <hsvColorPickers:NumberSlider x:Name="ArrowWidthSlider" Margin="0,5" Value="50" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}">
                                        <Slider.Header>
                                            Width
                                        </Slider.Header>
                                    </hsvColorPickers:NumberSlider>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryCapsuleTransform">
                            </local:OptionCase>
                            <local:OptionCase Value="GeometryHeartTransform">
                                <hsvColorPickers:NumberSlider x:Name="HeartSpreadSlider" Margin="0,5" Value="80" Minimum="0" Maximum="100" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}">
                                    <Slider.Header>
                                        Spread
                                    </Slider.Header>
                                </hsvColorPickers:NumberSlider>
                            </local:OptionCase>


                            <local:OptionCase Value="PatternGridTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind DeviceHubToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <ListBox x:Name="GridComboBox" SelectedIndex="0" Margin="10,4" Style="{StaticResource AppSegmentListBoxStyle}"
                                             Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <ListBoxItem local:ContentExtensions.ElementIconWithToolTip="GridGrid"/>
                                            <ListBoxItem x:Name="GridColumnItem"  local:ContentExtensions.ElementIconWithToolTip="GridColumn"/>
                                            <ListBoxItem x:Name="GridRowItem"  local:ContentExtensions.ElementIconWithToolTip="GridRow"/>
                                        </ListBox>
                                        <hsvColorPickers:NumberSlider x:Name="GridStrokeWidthSlider" Value="2" Minimum="1" Maximum="32" Decrease="True" Foreground="{ThemeResource AppForeground}"
                                                Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <Slider.Header>
                                                Stroke Width
                                            </Slider.Header>
                                        </hsvColorPickers:NumberSlider>
                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="GridColumnSpanSlider" Value="30" Minimum="5" Maximum="200" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                            IsEnabled="{x:Bind ReverseBooleanConverter(GridRowItem.IsSelected), Mode=OneWay}" 
                                            Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <Slider.Header>
                                                Column Span
                                            </Slider.Header>
                                        </hsvColorPickers:NumberSlider>
                                        <hsvColorPickers:NumberSlider x:Name="GridRowSpanSlider" Value="30" Minimum="5" Maximum="200" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                            IsEnabled="{x:Bind ReverseBooleanConverter(GridColumnItem.IsSelected), Mode=OneWay}" 
                                            Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <Slider.Header>
                                                Row Span
                                            </Slider.Header>
                                        </hsvColorPickers:NumberSlider>
                                    </StackPanel>
                                </StackPanel>
                            </local:OptionCase>
                            <local:OptionCase Value="PatternSpottedTransform">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="SpottedRadiusSlider" Value="8" Minimum="5" Maximum="100" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Slider.Header>
                                            Radius
                                        </Slider.Header>
                                    </hsvColorPickers:NumberSlider>
                                    <hsvColorPickers:NumberSlider x:Name="SpottedSpanSlider" Value="30" Minimum="5" Maximum="200" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Slider.Header>
                                            Span
                                        </Slider.Header>
                                    </hsvColorPickers:NumberSlider>
                                    <hsvColorPickers:NumberSlider x:Name="SpottedFadeSlider" Value="0" Minimum="0" Maximum="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Slider.Header>
                                            Fade
                                        </Slider.Header>
                                    </hsvColorPickers:NumberSlider>
                                </StackPanel>
                            </local:OptionCase>
                        </local:OptionSwitchPresenter>

                    </Grid>

                </Grid>
            </SplitView>
        </SplitView>


        <!--Head-->
        <Grid Height="50" VerticalAlignment="Top" >

            <Button x:Name="DockLeftButton" Width="90" Height="50" HorizontalAlignment="Left" local:CommandParameterExtensions.ButtonBase="DockLeft" Command="{x:Bind Command}" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip x:Name="DockLeftToolTip" Style="{StaticResource AppToolTipStyle}">
                        Dock Left
                    </ToolTip>
                </ToolTipService.ToolTip>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <SymbolIcon Margin="4,0" Symbol="DockLeft"/>
                    <FontIcon Glyph="&#xE26C;" FontSize="8" FontWeight="Bold" FontFamily="Segoe MDL2 Assets">
                        <UIElement.RenderTransformOrigin>
                            0.5, 0.5
                        </UIElement.RenderTransformOrigin>
                        <UIElement.RenderTransform>
                            <RotateTransform Angle="{x:Bind DockLeftConverter(SplitLeftView.IsPaneOpen), Mode=OneWay}"/>
                        </UIElement.RenderTransform>
                    </FontIcon>
                </StackPanel>
            </Button>

            <Button x:Name="DockRightButton" Width="90" Height="50" HorizontalAlignment="Right" local:CommandParameterExtensions.ButtonBase="DockRight" Command="{x:Bind Command}" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip x:Name="DockRightToolTip" Style="{StaticResource AppToolTipStyle}">
                        Dock Right
                    </ToolTip>
                </ToolTipService.ToolTip>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE26B;" FontSize="8" FontWeight="Bold" FontFamily="Segoe MDL2 Assets">
                        <UIElement.RenderTransformOrigin>
                            0.5, 0.5
                        </UIElement.RenderTransformOrigin>
                        <UIElement.RenderTransform>
                            <RotateTransform Angle="{x:Bind DockRightConverter(SplitRightView.IsPaneOpen), Mode=OneWay}"/>
                        </UIElement.RenderTransform>
                    </FontIcon>
                    <SymbolIcon Margin="4,0" Symbol="DockRight"/>
                </StackPanel>
            </Button>

            <Grid x:Name="HeadGrid" CornerRadius="6" Height="50" MaxWidth="1120" BorderThickness="1" BorderBrush="{ThemeResource AppStroke}" Background="{ThemeResource AppBackground}" >

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                    <Button Width="70" Height="50" local:CommandParameterExtensions.ButtonBase="Home" Command="{x:Bind Command}" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}">
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="HomeToolTip" Style="{StaticResource AppToolTipStyle}">
                                Home
                            </ToolTip>
                        </ToolTipService.ToolTip>
                        <SymbolIcon Symbol="Home"/>
                    </Button>
                    <Button Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Style="{StaticResource TextBlockButtonStyle}">
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="ExportToolTip" Style="{StaticResource AppToolTipStyle}">
                                Export
                            </ToolTip>
                        </ToolTipService.ToolTip>
                        <Button.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutSeparator x:Name="FileHeaderSeparator" Style="{StaticResource AppHeaderMenuFlyoutSeparator}">
                                    <UIElement.AccessKey>
                                        Files
                                    </UIElement.AccessKey>
                                </MenuFlyoutSeparator>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItem="Home" Command="{x:Bind Command}">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Home"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItem="Save" Command="{x:Bind Command}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                                    </UIElement.KeyboardAccelerators>
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Save"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSubItem Text="Export">
                                    <MenuFlyoutSubItem.Icon>
                                        <SymbolIcon Symbol="NewWindow"/>
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="JPEG" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="PNG" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="BMP" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="GIF" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="TIFF" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItem="CropCanvas" Command="{x:Bind Command}">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Crop"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSubItem Text="ResizeCanvas">
                                    <MenuFlyoutSubItem.Icon>
                                        <SymbolIcon Symbol="StopSlideShow"/>
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Stretch" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Extend" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Offset" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSubItem Text="RotateCanvas">
                                    <MenuFlyoutSubItem.Icon>
                                        <SymbolIcon Symbol="Orientation"/>
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="FlipHorizontal" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="FlipVertical" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="LeftTurn" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="RightTurn" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                    <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="OverTurn" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItem="Close" Command="{x:Bind Command}">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Cancel"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                        <elements:AnimationIcon x:Name="AnimationIcon"/>
                    </Button>
                    <Button x:Name="FullScreenButton" Width="70" Height="50" local:CommandParameterExtensions.ButtonBase="FullScreen" Command="{x:Bind Command}" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}">
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="FullScreenToolTip" Style="{StaticResource AppToolTipStyle}">
                                Full screen
                            </ToolTip>
                        </ToolTipService.ToolTip>
                        <SymbolIcon Symbol="FullScreen" />
                    </Button>
                    <Button x:Name="UnFullScreenButton" Visibility="Collapsed" Width="70" Height="50" local:CommandParameterExtensions.ButtonBase="UnFullScreen" Command="{x:Bind Command}" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}">
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="UnFullScreenToolTip" Style="{StaticResource AppToolTipStyle}">
                                Exit Full screen
                            </ToolTip>
                        </ToolTipService.ToolTip>
                        <SymbolIcon Symbol="BackToWindow" />
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Button x:Name="UndoButton" Width="70" Height="50" local:CommandParameterExtensions.ButtonBase="Undo" Command="{x:Bind Command}" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}">
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="UndoToolTip" Style="{StaticResource AppToolTipStyle}">
                                Undo
                            </ToolTip>
                        </ToolTipService.ToolTip>
                        <UIElement.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="Z"/>
                        </UIElement.KeyboardAccelerators>
                        <SymbolIcon Symbol="Undo"/>
                    </Button>
                    <Button x:Name="RedoButton" Width="70" Height="50" local:CommandParameterExtensions.ButtonBase="Redo" Command="{x:Bind Command}" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}">
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="RedoToolTip" Style="{StaticResource AppToolTipStyle}">
                                Redo
                            </ToolTip>
                        </ToolTipService.ToolTip>
                        <UIElement.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="Y"/>
                        </UIElement.KeyboardAccelerators>
                        <SymbolIcon Symbol="Redo"/>
                    </Button>
                    <controls:ColorButton x:Name="ColorButton" Eyedropper="{x:Bind Eyedropper}" ClickEyedropper="{x:Bind ClickEyedropper}">
                        <Control.BorderBrush>
                            <ImageBrush ImageSource="{x:Bind WheelImageSource.ImageSource}"/>
                        </Control.BorderBrush>
                    </controls:ColorButton>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    <Button Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Style="{StaticResource TextBlockButtonStyle}" 
                            local:ContentExtensions.IconWithToolTip="EditMenu">
                        <Button.Flyout>
                            <MenuFlyout x:Name="EditMenuFlyout" Placement="Bottom">
                                <!--Edit-->
                                <MenuFlyoutSeparator x:Name="EditHeaderSeparator" Style="{StaticResource AppHeaderMenuFlyoutSeparator}">
                                    <UIElement.AccessKey>
                                        Edit
                                    </UIElement.AccessKey>
                                </MenuFlyoutSeparator>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Cut" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="X"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Copy" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="C"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem x:Name="PasteItem" local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Paste" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="V"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem x:Name="ClearItem" local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Clear" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Key="Back"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <!--Select-->
                                <!--
                                <MenuFlyoutSeparator x:Name="SelectHeaderSeparator" Style="{StaticResource AppHeaderMenuFlyoutSeparator}">
                                    <UIElement.AccessKey>
                                        Select
                                    </UIElement.AccessKey>
                                </MenuFlyoutSeparator>
                                -->
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="All" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="A"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Deselect" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="D"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="MarqueeInvert" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="I"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Pixel" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="P"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Feather" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="MarqueeTransform" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Grow" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Shrink" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                            </MenuFlyout>
                        </Button.Flyout>
                        <!--EditMenu-->
                    </Button>
                    <Button Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Style="{StaticResource TextBlockButtonStyle}" 
                            local:ContentExtensions.IconWithToolTip="AdjustmentMenu">
                        <Button.Flyout>
                            <Flyout x:Name="EffectFlyout" Placement="Top" Windows10version1903:ShouldConstrainToRootBounds="False" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
                                <controls:EffectListView x:Name="EffectListView"/>
                            </Flyout>
                        </Button.Flyout>
                        <!--AdjustmentMenu-->
                    </Button>
                    <Button x:Name="MoreButton" Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Style="{StaticResource TextBlockButtonStyle}" 
                            local:ContentExtensions.IconWithToolTip="OtherMenu">
                        <Button.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <!--More-->
                                <MenuFlyoutSeparator x:Name="MoreHeaderSeparator" Style="{StaticResource AppHeaderMenuFlyoutSeparator}">
                                    <UIElement.AccessKey>
                                        More
                                    </UIElement.AccessKey>
                                </MenuFlyoutSeparator>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Move" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="M"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Transform" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}">
                                    <UIElement.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="T"/>
                                    </UIElement.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="FreeTransform" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="DisplacementLiquefaction" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="GradientMapping" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="RippleEffect" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="Threshold" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem local:CommandParameterExtensions.MenuFlyoutItemWidthIcon="HSB" Command="{x:Bind Command}" Style="{StaticResource AppMenuFlyoutItemWithIconStyle}"/>
                            </MenuFlyout>
                        </Button.Flyout>
                        <!--OtherMenu-->
                    </Button>

                </StackPanel>

            </Grid>


            <!--AppBar-->
            <Grid x:Name="AppBarHeadGrid" ColumnSpacing="6" Padding="6,0" Visibility="Collapsed" CornerRadius="6" Height="50" MaxWidth="1120" BorderThickness="1" BorderBrush="{ThemeResource AppStroke}" Background="{ThemeResource AppBackground}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*" MinWidth="50" MaxWidth="80"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="AppBarPrimaryButton" Grid.Column="2" CornerRadius="4" Height="40" HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderThickness="1" Style="{StaticResource AccentButtonStyle}" >
                    Apply
                </Button>
                <Button x:Name="AppBarBackButton" Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Background="{ThemeResource AppBackgroundMediumDark}" Style="{StaticResource TextBlockButtonStyle}">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Name="AppBarBackToolTip" Style="{StaticResource AppToolTipStyle}">
                            Back
                        </ToolTip>
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Back"/>
                </Button>
                <TextBlock
                    x:Name="TitleTextBlock"
                    Grid.Column="1" 
                    Margin="16,0"
                    IsTextSelectionEnabled="True"
                    FontWeight="Medium" 
                    TextTrimming="CharacterEllipsis" 
                    FontSize="20" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Center" 
                    OpticalMarginAlignment="TrimSideBearings"
                    >   
                    <!--Title-->
                </TextBlock>
            </Grid>

        </Grid>


        <!--Dialog-->
        <controls:ExportDialog x:Name="ExportDialog" />
        <controls:TextureDialog x:Name="TextureDialog" />
        <controls:StretchDialog x:Name="StretchDialog" />
        <controls:ExtendDialog x:Name="ExtendDialog" />
        <controls:OffsetDialog x:Name="OffsetDialog" />


        <!--Tip-->
        <controls:ToastTip x:Name="ToastTip" Visibility="Collapsed" IsHitTestVisible="False" />
        <controls:KeyboardShortcuts x:Name="KeyboardShortcuts" Visibility="Collapsed" />
        <Border IsHitTestVisible="False" CornerRadius="6" Padding="12,3" MinHeight="40" Background="Red" RequestedTheme="Dark" HorizontalAlignment="Center" VerticalAlignment="Center"
                Visibility="{x:Bind ReverseBooleanToVisibilityConverter(GradientMappingSelector.IsHitTestVisible), Mode=OneWay}">
            <StackPanel Orientation="Horizontal">
                <SymbolIcon Symbol="Delete"/>
                <ContentControl Width="12"/>
                <TextBlock x:Name="GradientMappingTipTextBlock" FontWeight="Medium" VerticalAlignment="Center">
                    Drop to Remove
                </TextBlock>
            </StackPanel>
        </Border>


        <hsvColorPickers:Eyedropper x:Name="Eyedropper" Visibility="Collapsed"/>
        <hsvColorPickers:ClickEyedropper x:Name="ClickEyedropper" Visibility="Collapsed"/>

    </Grid>
</Page>