<ContentDialog
    x:Class="Luo_Painter.Controls.StretchDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:luo_painter="using:Luo_Painter"
    xmlns:controls="using:Luo_Painter.Controls"
    mc:Ignorable="d"
    FullSizeDesired="False" 
    Style="{StaticResource AppContentDialogStyle}" 
    luo_painter:Res.UD="Stretch"
    >

    <StackPanel>

        <controls:SizePicker x:Name="SizePicker" Margin="0,0,0,8"/>

        <MenuFlyoutSeparator Margin="0,4"/>

        <TextBlock Margin="2,4" Foreground="{ThemeResource AppForeground}" Style="{StaticResource BaseTextBlockStyle}"
                   luo_painter:Res.UT="Stretch_Interpolation"/>

        <ListView x:Name="InterpolationListView" SelectedIndex="1" Style="{StaticResource AppListViewStyle}">
            <luo_painter:InterpolationItem Type="NearestNeighbor"/>
            <luo_painter:InterpolationItem FontWeight="Bold" Type="Linear"/>
            <luo_painter:InterpolationItem Type="Cubic"/>
            <luo_painter:InterpolationItem Type="MultiSampleLinear"/>
            <luo_painter:InterpolationItem Type="Anisotropic"/>
            <luo_painter:InterpolationItem Type="HighQualityCubic"/>
        </ListView>

    </StackPanel>
</ContentDialog>