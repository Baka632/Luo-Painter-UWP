<UserControl
    x:Class="Luo_Painter.Elements.SelectedImages"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="50"
    Opacity="{x:Bind BooleanToVisibilityConverter(Presenter.Ancestor.IsSelected), Mode=OneWay}" 
    >
    <StackPanel Orientation="Horizontal" Spacing="4" Background="#CECECE">
        <BitmapIcon Width="64" Height="64" UriSource="{x:Bind Presenter.Source1}" Foreground="Black"/>
        <BitmapIcon Width="188" Height="64" UriSource="{x:Bind Presenter.Source2}" Foreground="Black"/>
    </StackPanel>
</UserControl>